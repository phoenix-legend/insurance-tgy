<div class="banner">
  <%= image_tag "/uploads/images/#{@image_url}" unless @image_url.blank?%>
</div>
<div class="form">
<%= form_tag(search_price_wz_order_system_products_path, id: 'compare_price_form', method: 'post') do %>
    <ul>
      <li>
        <label>车价</label>
        <%= text_field_tag :car_price,@car_price,class: "ipt" %><span class="unit">万元</span>
      </li>
      <li>
          <label>所在地</label>
          <%= text_field_tag :city,@city,class:"ipt", :onClick => "javascript:get_city_name()" %>
      </li>
      <li>
          <label>车牌号</label>
          <%= text_field_tag :car_number,get_show_value('', v2: @car_number, v1: session[:car_number]), class:"ipt" ,placeholder:"" %>
      </li>
      <li>
          <label>手机号</label>
          <%= text_field_tag :phone,get_show_value('', v1: @phone, v2: session[:phone]),class:"ipt", placeholder: ""  %>
      </li>
    <div><%= hidden_field_tag :product_id,@product_id %></div>
    <div><%= hidden_field_tag :ip,@ip %></div>
    </ul>
    <div class="error">
        <% unless @error_message.blank? %>
            <p style="color:#ff0000"><%= @error_message %></p>
        <% end %>
    </div>
    <div class="tc ok">
      <%= link_to "立即比价", "javascript:compare_price()",class: "submit"%>
    </div>
<% end %>
</div>

<script language="javascript">
    function get_city_name(){
        $("#compare_price_form").attr('action', '/wz/order_system/products/get_city_name');
        $("#compare_price_form").submit();
    }
    function compare_price(){
        $("#compare_price_form").attr('action', '<%= search_price_wz_order_system_products_path %>');
        $("#compare_price_form").submit();
    }
</script>

